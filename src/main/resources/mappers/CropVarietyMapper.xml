<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.demo.repository.CropVarietyRepository">

	<select id="findByCropId" parameterType="int"
		resultType="com.example.demo.vo.CropVariety">
		SELECT *
		FROM crop_variety
		WHERE crop_id = #{cropId}
	</select>

	<select id="findAllGrouped" resultType="map">
		SELECT category,
		crop_name, variety
		FROM crop_variety
		ORDER BY category, crop_name
	</select>

	<select id="getIdByVarietyName" parameterType="string"
		resultType="int">
		SELECT id
		FROM crop_variety
		WHERE variety = #{variety}
		LIMIT 1
	</select>

</mapper>